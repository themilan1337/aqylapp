      <script>
        const profileButton = document.getElementById('profileButton');
        const profileDropdown = document.getElementById('profileDropdown');
        const burgerButton = document.getElementById('burgerButton');
        const burgerDropdown = document.getElementById('burgerDropdown');
        let isProfileDropdownOpen = false;
        let isBurgerDropdownOpen = false;

        profileButton.addEventListener('click', (e) => {
          e.stopPropagation();
          isProfileDropdownOpen = !isProfileDropdownOpen;
          
          if (isProfileDropdownOpen) {
            // Close burger dropdown if open
            if (isBurgerDropdownOpen) {
              closeBurgerDropdown();
            }
            
            profileDropdown.classList.remove('hidden');
            setTimeout(() => {
              profileDropdown.classList.remove('opacity-0', '-translate-y-2');
            }, 50);
          } else {
            closeProfileDropdown();
          }
        });

        burgerButton.addEventListener('click', (e) => {
          e.stopPropagation();
          isBurgerDropdownOpen = !isBurgerDropdownOpen;
          
          if (isBurgerDropdownOpen) {
            // Close profile dropdown if open
            if (isProfileDropdownOpen) {
              closeProfileDropdown();
            }
            
            burgerDropdown.classList.remove('hidden');
            setTimeout(() => {
              burgerDropdown.classList.remove('opacity-0', '-translate-y-2');
            }, 50);
          } else {
            closeBurgerDropdown();
          }
        });

        document.addEventListener('click', (e) => {
          if (isProfileDropdownOpen && !profileDropdown.contains(e.target) && e.target !== profileButton) {
            closeProfileDropdown();
          }
          
          if (isBurgerDropdownOpen && !burgerDropdown.contains(e.target) && e.target !== burgerButton) {
            closeBurgerDropdown();
          }
        });

        function closeProfileDropdown() {
          isProfileDropdownOpen = false;
          profileDropdown.classList.add('opacity-0', '-translate-y-2');
          setTimeout(() => {
            profileDropdown.classList.add('hidden');
          }, 300);
        }

        function closeBurgerDropdown() {
          isBurgerDropdownOpen = false;
          burgerDropdown.classList.add('opacity-0', '-translate-y-2');
          setTimeout(() => {
            burgerDropdown.classList.add('hidden');
          }, 300);
        }
      </script>