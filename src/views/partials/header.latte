      font-family: 'Nunito'!important;
      font-weight: 900;
    }
    .inter {
      font-family: 'Inter'!important;
    }
    .progress-bar {
      height: 6px;
      border-radius: 3px;
      background-color: #e9e9e9;
    }
    .progress-fill {
      height: 6px;
      border-radius: 3px;
      background-color: #000;
    }
    .card-stats {
      min-height: 130px;
    }
    .avatar-robot {
      background-color: #ffd7e0;
    }
    .calendar-day {
      width: 40px;
      height: 40px;
    }
    .calendar-item {
      border-radius: 14px;
    }

  </style>
  
